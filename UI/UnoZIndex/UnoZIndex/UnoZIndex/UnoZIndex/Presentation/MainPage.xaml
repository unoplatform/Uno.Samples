<Page
	x:Class="UnoZIndex.Presentation.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:UnoZIndex.Presentation"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:toolkit="using:Uno.UI.Toolkit"
	xmlns:uen="using:Uno.Extensions.Navigation.UI"
	xmlns:utu="using:Uno.Toolkit.UI"
	Background="{ThemeResource BackgroundBrush}"
	NavigationCacheMode="Required"
	mc:Ignorable="d">

	<Page.Resources>
		<utu:ShadowCollection x:Key="InnerShadows">
			<utu:Shadow
				BlurRadius="5"
				IsInner="False"
				Opacity="0.75"
				Color="DarkGray" />
		</utu:ShadowCollection>
	</Page.Resources>

	<Grid utu:SafeArea.Insets="All">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid>
			<TextBlock Text="Tap on individual cards to bring to the front" />
		</Grid>

		<Canvas x:Name="MainCanvas" Grid.Row="1">

			<utu:ShadowContainer
				x:Name="Card"
				Canvas.Left="20"
				Canvas.Top="20"
				Width="300"
				Height="200"
				Background="{ThemeResource BackgroundBrush}"
				Shadows="{StaticResource InnerShadows}"
				Tapped="Card_Tapped">
				<Border CornerRadius="10" IsTapEnabled="True">
					<Grid RowSpacing="5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="8*" />
						</Grid.ColumnDefinitions>
						<Rectangle Fill="DarkOliveGreen" />
						<Grid Grid.Column="1" Padding="15">
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>

							<TextBlock FontSize="16" Text="Card One Title" />
							<TextBlock
								Grid.Row="1"
								FontSize="14"
								Text="Card One Content" />
						</Grid>

					</Grid>
				</Border>
			</utu:ShadowContainer>
			<utu:ShadowContainer
				x:Name="Card2"
				Canvas.Left="40"
				Canvas.Top="70"
				Width="300"
				Height="200"
				IsTapEnabled="True"
				Shadows="{StaticResource InnerShadows}"
				Tapped="Card_Tapped">
				<Border CornerRadius="5">
					<Grid Background="{ThemeResource BackgroundBrush}" RowSpacing="5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="8*" />
						</Grid.ColumnDefinitions>
						<Rectangle Fill="DarkCyan" />
						<Grid Grid.Column="1" Padding="15">
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>

							<TextBlock FontSize="16" Text="Card Two Title" />
							<TextBlock
								Grid.Row="1"
								FontSize="14"
								Text="Card Two Content" />
						</Grid>

					</Grid>
				</Border>
			</utu:ShadowContainer>
			<utu:ShadowContainer
				x:Name="Card3"
				Canvas.Left="60"
				Canvas.Top="120"
				Width="300"
				Height="200"
				IsTapEnabled="True"
				Shadows="{StaticResource InnerShadows}"
				Tapped="Card_Tapped">
				<Border CornerRadius="5">
					<Grid Background="{ThemeResource BackgroundBrush}" RowSpacing="5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="8*" />
						</Grid.ColumnDefinitions>
						<Rectangle Fill="DarkBlue" />
						<Grid Grid.Column="1" Padding="15">
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>

							<TextBlock FontSize="16" Text="Card Three Title" />
							<TextBlock
								Grid.Row="1"
								FontSize="14"
								Text="Card Three Content" />
						</Grid>

					</Grid>
				</Border>
			</utu:ShadowContainer>
			<utu:ShadowContainer
				x:Name="Card4"
				Canvas.Left="80"
				Canvas.Top="170"
				Width="300"
				Height="200"
				CornerRadius="5"
				IsTapEnabled="True"
				Shadows="{StaticResource InnerShadows}"
				Tapped="Card_Tapped">
				<Border CornerRadius="5">
					<Grid Background="{ThemeResource BackgroundBrush}" RowSpacing="5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="8*" />
						</Grid.ColumnDefinitions>
						<Rectangle Fill="DarkGreen" />
						<Grid Grid.Column="1" Padding="15">
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>

							<TextBlock FontSize="16" Text="Card Four Title" />
							<TextBlock
								Grid.Row="1"
								FontSize="14"
								Text="Card Four Content" />
						</Grid>

					</Grid>
				</Border>
			</utu:ShadowContainer>

		</Canvas>
	</Grid>
</Page>
