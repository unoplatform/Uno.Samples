						Value="Center" />
				<Setter Property="HorizontalTextAlignment"
						Value="Center" />
				<Setter Property="VerticalTextAlignment"
						Value="Center" />
			</Style>
			<Style x:Key="DefaultTabItemIconStyle"
				   TargetType="Label"
				   BasedOn="{StaticResource DefaultTabItemStyle}">
				<Setter Property="FontSize"
						Value="Title" />
				<Setter Property="FontFamily"
						Value="TelerikFont" />
			</Style>
			<Style x:Key="DefaultTabItemLabelStyle"
				   TargetType="Label"
				   BasedOn="{StaticResource DefaultTabItemStyle}">
				<Setter Property="FontSize"
						Value="Micro" />
			</Style>
