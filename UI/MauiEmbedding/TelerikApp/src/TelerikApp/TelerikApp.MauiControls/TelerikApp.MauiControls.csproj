<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows')) or '$(EnableWindowsTargeting)' == 'true'">net9.0-windows10.0.26100</TargetFrameworks>
		<TargetFrameworks>
			net9.0;
			net9.0-android;
			net9.0-ios;
			net9.0-maccatalyst;
			$(TargetFrameworks);
