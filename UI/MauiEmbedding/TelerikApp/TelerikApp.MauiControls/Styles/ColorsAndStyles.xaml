	<Style x:Key="AccentButtonStyle"
		   TargetType="telerik:RadButton"
		   BasedOn="{StaticResource ButtonBaseStyle}">
		<Setter Property="TextColor"
				Value="{StaticResource AccentColor8}" />
		<Setter Property="BorderColor"
				Value="{StaticResource AccentColor8}" />
		<Setter Property="VisualStateManager.VisualStateGroups">
			<VisualStateGroupList>
				<VisualStateGroup x:Name="CommonGroups">
					<VisualState x:Name="Normal" />
					<VisualState x:Name="Focused" />
					<VisualState x:Name="Pressed">
						<VisualState.Setters>
							<Setter Property="BorderColor"
									Value="{StaticResource AccentColor8}" />
							<Setter Property="TextColor"
									Value="{StaticResource AccentColor8}" />
						</VisualState.Setters>
					</VisualState>
					<VisualState x:Name="Disabled">
						<VisualState.Setters>
							<Setter Property="BorderColor"
									Value="{StaticResource AccentColor8}" />
							<Setter Property="TextColor"
									Value="{StaticResource AccentColor8}" />
							<Setter Property="Opacity"
									Value="0.38" />
						</VisualState.Setters>
					</VisualState>
				</VisualStateGroup>
			</VisualStateGroupList>
		</Setter>
	</Style>

	<Style x:Key="SubmitButtonStyle"
		   TargetType="telerik:RadButton"
		   BasedOn="{StaticResource AccentButtonStyle}">
		<Setter Property="Text"
				Value="Submit Request" />
		<Setter Property="HorizontalContentAlignment"
				Value="Center" />
		<Setter Property="HorizontalOptions"
				Value="FillAndExpand" />
		<Setter Property="VerticalOptions"
				Value="CenterAndExpand" />
	</Style>

	<Style x:Key="MoreInfoButtonStyle"
		   TargetType="telerik:RadButton"
		   BasedOn="{StaticResource ButtonBaseStyle}">
		<Setter Property="Text"
				Value="More Info" />
		<Setter Property="HorizontalContentAlignment"
				Value="End" />
		<Setter Property="FontSize"
				Value="{OnPlatform MacCatalyst=Small, iOS=Small, Default=Default}" />
		<Setter Property="ImageSource"
				Value="{OnIdiom Desktop=info_desktop.png, Default=info_mobile.png}" />
		<Setter Property="Padding"
				Value="{OnPlatform Default='12, 10', WinUI='11, 6'}" />
	</Style>

	<Style x:Key="DefaultBusyIndicatorStyle"
		   TargetType="telerik:RadBusyIndicator">
		<Setter Property="AnimationContentColor"
				Value="{StaticResource AccentColor8}" />
	</Style>

	<Style x:Key="ExampleCheckBoxStyle"
		   TargetType="telerik:RadCheckBox">
		<Setter Property="UncheckedColor"
				Value="#CCCCCC" />
		<Setter Property="CheckedColor"
				Value="{StaticResource ApplicationAccentColor}" />
	</Style>-->
</ResourceDictionary>