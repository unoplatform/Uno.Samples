      <!-- Can be removed and replaced by the commented TemplateColumn below when https://github.com/unoplatform/uno.extensions/issues/2328 is fixed -->
      <dxg:TextColumn FieldName="Name"
                      MinWidth="200"
                      VerticalContentAlignment="Center" />
