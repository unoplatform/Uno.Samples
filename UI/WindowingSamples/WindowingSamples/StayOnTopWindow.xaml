<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="WindowingSamples.StayOnTopWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:WindowingSamples.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <controls:WindowTitleControl Text="Stay on top" Glyph="&#xE7B5;" />

    <TextBlock HorizontalAlignment="Center" FontSize="40" VerticalAlignment="Center" Grid.Row="1" Text="This window always stays on top!" />
  </Grid>
</Window>
