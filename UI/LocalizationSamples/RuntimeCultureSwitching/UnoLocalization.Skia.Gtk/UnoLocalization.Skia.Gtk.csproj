<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType Condition="'$(Configuration)'=='Release'">WinExe</OutputType>
    <OutputType Condition="'$(Configuration)'=='Debug'">Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup Condition="exists('..\UnoLocalization.Windows')">
    <EmbeddedResource Include="..\UnoLocalization.Windows\Package.appxmanifest" LogicalName="Package.appxmanifest" />
    <Content Include="..\UnoLocalization.Windows\Images\StoreLogo.png" Link="Assets\StoreLogo.png" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Assets\**" />
  </ItemGroup>
  <ItemGroup>
    <UpToDateCheckInput Include="..\UnoLocalization.Shared\**\*.xaml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />
    <PackageReference Include="Uno.WinUI.Skia.Gtk" Version="5.2.7" />
    <PackageReference Include="Uno.WinUI.DevServer" Version="5.2.7" Condition="'$(Configuration)'=='Debug'" />
    <PackageReference Include="Uno.UI.Adapter.Microsoft.Extensions.Logging" Version="5.2.7" />
    <PackageReference Include="Uno.WinUI.Lottie" Version="5.2.7" />
    <PackageReference Include="SkiaSharp.Views.Uno.WinUI" Version="2.88.7" />
    <PackageReference Include="SkiaSharp.Skottie" Version="2.88.7" />
  </ItemGroup>
  <Import Project="..\UnoLocalization.Shared\UnoLocalization.Shared.projitems" Label="Shared" />
</Project>