<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="SimpleComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Foreground" Value="{ThemeResource Gray-900}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Montserrat-Regular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Background" Value="{ThemeResource Gray-900}"/>
    </Style>

    <Style x:Key="SimpleComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Montserrat-Regular"/>
    </Style>

    <Style x:Key="TextInputLayoutComboBoxStyle" TargetType="ComboBox">
        <Setter Property="FontFamily" Value="Montserrat-Regular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{ThemeResource Gray-700}"/>        
    </Style>

    <Style x:Key="TextInputLayoutComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Montserrat-Regular"/>
    </Style>


</ResourceDictionary>
