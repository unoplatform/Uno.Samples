<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls">

    <Style x:Key="TabViewStyle" TargetType="winui:TabView">
        <Setter Property="CanDragTabs" Value="False"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource Gray-100}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="TabWidthMode" Value="Equal"/>
        <Setter Property="TabFocusNavigation" Value="Cycle"/>
        <Setter Property="IsAddTabButtonVisible" Value="False"/>
    </Style>

    <Style x:Key="TabViewItemStyle" TargetType="winui:TabViewItem">
        <Setter Property="FontFamily" Value="{StaticResource Montserrat-SemiBold}"/>
        <Setter Property="FontFamily" Value="16"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="IsClosable" Value="False"/>
    </Style>

</ResourceDictionary>
