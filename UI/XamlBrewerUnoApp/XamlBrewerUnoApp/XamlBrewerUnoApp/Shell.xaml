<UserControl x:Class="XamlBrewerUnoApp.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:utu="using:Uno.Toolkit.UI"
             mc:Ignorable="d">

  <Grid x:Name="Root"
        utu:SafeArea.Insets="VisibleBounds"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        VerticalAlignment="Stretch"
        HorizontalAlignment="Stretch">

    <!-- Main Beef -->
    <NavigationView x:Name="NavigationView"
                    Loaded="NavigationView_Loaded"
                    SelectionChanged="NavigationView_SelectionChanged"
                    Header="WinUI 3 Master Detail Sample"
                    IsBackButtonVisible="Collapsed"
                    Background="Transparent"
                    IsSettingsVisible="False"
                    Margin="0">
      <!--<NavigationView.PaneCustomContent>
                <HyperlinkButton NavigateUri="https://github.com/XamlBrewer/XamlBrewerUnoApp"
                                 Margin="8 0">Blog post</HyperlinkButton>
            </NavigationView.PaneCustomContent>-->
      <NavigationView.MenuItems>
        <NavigationViewItem Content="Hello World"
                            Tag="XamlBrewerUnoApp.HomePage"
                            ToolTipService.ToolTip="Hello World">
          <NavigationViewItem.Icon>
            <BitmapIcon UriSource="ms-appx:///XamlBrewerUnoApp/Assets/Home.png"
                        ShowAsMonochrome="False" />
          </NavigationViewItem.Icon>
        </NavigationViewItem>
        <NavigationViewItem Content="Gallery"
                            Tag="XamlBrewerUnoApp.GalleryPage"
                            ToolTipService.ToolTip="Samples">
          <NavigationViewItem.Icon>
            <BitmapIcon UriSource="ms-appx:///XamlBrewerUnoApp/Assets/Gallery.png"
                        ShowAsMonochrome="False" />
          </NavigationViewItem.Icon>
        </NavigationViewItem>
        <NavigationViewItem Content="Pythagoras Tree"
                            Tag="XamlBrewerUnoApp.PythagorasTreePage"
                            ToolTipService.ToolTip="Pythagoras Tree">
          <NavigationViewItem.Icon>
            <BitmapIcon UriSource="ms-appx:///XamlBrewerUnoApp/Assets/PythagorasTree.png"
                        ShowAsMonochrome="False" />
          </NavigationViewItem.Icon>
        </NavigationViewItem>
      </NavigationView.MenuItems>
      <NavigationView.FooterMenuItems>
        <NavigationViewItem Content="About"
                            Tag="XamlBrewerUnoApp.AboutPage">
          <NavigationViewItem.Icon>
            <BitmapIcon UriSource="ms-appx:///XamlBrewerUnoApp/Assets/About.png"
                        ShowAsMonochrome="False" />
          </NavigationViewItem.Icon>
        </NavigationViewItem>
      </NavigationView.FooterMenuItems>
      <Frame x:Name="ContentFrame"
             Padding="20">
        <!--<Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition>
                            <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                <DrillInNavigationTransitionInfo />
                            </NavigationThemeTransition.DefaultNavigationTransitionInfo>
                        </NavigationThemeTransition>
                    </TransitionCollection>
                </Frame.ContentTransitions>-->
      </Frame>
    </NavigationView>

    <!-- Theme Switcher -->
    <Button Click="ToggleButton_Click"
            Background="Transparent"
            Margin="16"
            HorizontalAlignment="Right"
            HorizontalContentAlignment="Right"
            VerticalAlignment="Top">
      <FontIcon Glyph="&#xE793;"
                FontSize="16" />
    </Button>

    <!-- XAML Brewer Logo -->
    <Viewbox StretchDirection="DownOnly"
             HorizontalAlignment="Right"
             VerticalAlignment="Bottom"
             Width="142"
             Margin="0,0,8,8">
      <Canvas Height="80"
              Width="200"
              Background="Transparent">
        <Canvas>
          <Viewbox Height="70"
                   Canvas.Left="5"
                   Canvas.Top="5">
            <Canvas Width="124"
                    Height="240"
                    Background="Transparent">
              <Path Width="116"
