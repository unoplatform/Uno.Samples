          </Viewbox>
        </Canvas>
        <Grid Width="200"
              Height="80">
          <TextBlock Foreground="SlateGray"
                     FontSize="24"
                     FontWeight="SemiBold"
                     VerticalAlignment="Bottom"
                     Padding="0"
                     Margin="48 0 8 12">
                                    <Run Text="XAML"
                                         Foreground="{ThemeResource SystemAccentColor}" />
                                    <Run Text="Brewer"
                                         Foreground="DimGray"
