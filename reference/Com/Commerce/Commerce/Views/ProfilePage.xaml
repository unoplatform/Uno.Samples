	<utu:AutoLayout Background="{ThemeResource BackgroundBrush}"
					uen:Region.Attached="True"
					MaxWidth="{StaticResource LandscapeMaxPageWidth}">
		<utu:AutoLayout Background="{ThemeResource SurfaceBrush}"
						utu:AutoLayout.PrimaryAlignment="Stretch">
			<uer:FeedView Source="{Binding Profile}">
				<DataTemplate>
					<utu:AutoLayout Spacing="16"
									Padding="32,48,32,8"
									DataContext="{Binding Data}">
						<PersonPicture ProfilePicture="{Binding Avatar}"
									   utu:AutoLayout.CounterAlignment="Start"
									   utu:AutoLayout.PrimaryLength="60"
									   utu:AutoLayout.CounterLength="60"
									   x:Uid="Profile_PersonPicture" />
						<TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
								   Text="{Binding FullName}"
								   utu:AutoLayout.CounterAlignment="Start"
								   Style="{StaticResource HeadlineSmall}" />
					</utu:AutoLayout>
				</DataTemplate>
			</uer:FeedView>
			<utu:AutoLayout Spacing="8"
							Padding="24,24,24,24"
							CornerRadius="4">
				<utu:AutoLayout Orientation="Horizontal">
					<utu:AutoLayout Padding="8,8,8,8"
									Justify="SpaceBetween"
									Orientation="Horizontal"
									utu:AutoLayout.CounterAlignment="Start"
									utu:AutoLayout.PrimaryAlignment="Stretch">
						<utu:AutoLayout Padding="0,0,16,0"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center">
							<PathIcon Data="{StaticResource Icon_Person}"
									  Foreground="{ThemeResource OnSurfaceLowBrush}"
									  utu:AutoLayout.CounterAlignment="Start" />
						</utu:AutoLayout>
						<utu:AutoLayout Padding="0,2,0,2"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center"
										utu:AutoLayout.PrimaryAlignment="Stretch">
							<TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
									   Text="Account"
									   utu:AutoLayout.CounterAlignment="Center"
									   Style="{StaticResource BodyMedium}"
									   x:Uid="Profile_Label" />
						</utu:AutoLayout>
						<utu:AutoLayout Padding="16,0,0,0"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center">
							<PathIcon Data="{StaticResource Icon_Arrow_Right}"
									  Foreground="{ThemeResource OnSurfaceBrush}"
									  utu:AutoLayout.CounterAlignment="Start" />
						</utu:AutoLayout>
					</utu:AutoLayout>
				</utu:AutoLayout>
				<utu:Divider Style="{StaticResource DividerStyle}" />
				<utu:AutoLayout Orientation="Horizontal">
					<utu:AutoLayout Padding="8,8,8,8"
									Justify="SpaceBetween"
									Orientation="Horizontal"
									utu:AutoLayout.CounterAlignment="Start"
									utu:AutoLayout.PrimaryAlignment="Stretch">
						<utu:AutoLayout Padding="0,0,16,0"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center">
							<PathIcon Data="{StaticResource Icon_Settings}"
									  Foreground="{ThemeResource OnSurfaceLowBrush}"
									  utu:AutoLayout.CounterAlignment="Start" />
						</utu:AutoLayout>
						<utu:AutoLayout Padding="0,2,0,2"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center"
										utu:AutoLayout.PrimaryAlignment="Stretch">
							<TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
									   Text="Settings"
									   utu:AutoLayout.CounterAlignment="Center"
									   Style="{StaticResource BodyMedium}"
									   x:Uid="Profile_Label" />
						</utu:AutoLayout>
						<utu:AutoLayout Padding="16,0,0,0"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center">
							<PathIcon Data="{StaticResource Icon_Arrow_Right}"
									  Foreground="{ThemeResource OnSurfaceBrush}"
									  utu:AutoLayout.CounterAlignment="Start" />
						</utu:AutoLayout>
					</utu:AutoLayout>
				</utu:AutoLayout>
				<utu:Divider Style="{StaticResource DividerStyle}" />
				<utu:AutoLayout Orientation="Horizontal">
					<utu:AutoLayout Padding="8,8,8,8"
									Justify="SpaceBetween"
									Orientation="Horizontal"
									utu:AutoLayout.CounterAlignment="Start"
									utu:AutoLayout.PrimaryAlignment="Stretch">
						<utu:AutoLayout Padding="0,0,16,0"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center">
							<PathIcon Data="{StaticResource Icon_Local_Shipping}"
									  Foreground="{ThemeResource OnSurfaceLowBrush}"
									  utu:AutoLayout.CounterAlignment="Start" />
						</utu:AutoLayout>
						<utu:AutoLayout Padding="0,2,0,2"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center"
										utu:AutoLayout.PrimaryAlignment="Stretch">
							<TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
									   Text="Orders"
									   utu:AutoLayout.CounterAlignment="Center"
									   Style="{StaticResource BodyMedium}"
									   x:Uid="Profile_Label" />
						</utu:AutoLayout>
						<utu:AutoLayout Padding="16,0,0,0"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center">
							<PathIcon Data="{StaticResource Icon_Arrow_Right}"
									  Foreground="{ThemeResource OnSurfaceBrush}"
									  utu:AutoLayout.CounterAlignment="Start" />
						</utu:AutoLayout>
					</utu:AutoLayout>
				</utu:AutoLayout>
				<utu:Divider Style="{StaticResource DividerStyle}" />
				<utu:AutoLayout Orientation="Horizontal">
					<utu:AutoLayout Padding="8,8,8,8"
									Justify="SpaceBetween"
									Orientation="Horizontal"
									utu:AutoLayout.CounterAlignment="Start"
									utu:AutoLayout.PrimaryAlignment="Stretch">
						<utu:AutoLayout Padding="0,0,16,0"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center">
							<PathIcon Data="{StaticResource Icon_Help}"
									  Foreground="{ThemeResource OnSurfaceLowBrush}"
									  utu:AutoLayout.CounterAlignment="Start" />
						</utu:AutoLayout>
						<utu:AutoLayout Padding="0,2,0,2"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center"
										utu:AutoLayout.PrimaryAlignment="Stretch">
							<TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
									   Text="Help"
									   utu:AutoLayout.CounterAlignment="Center"
									   Style="{StaticResource BodyMedium}"
									   x:Uid="Profile_Label" />
						</utu:AutoLayout>
						<utu:AutoLayout Padding="16,0,0,0"
										Orientation="Horizontal"
										utu:AutoLayout.CounterAlignment="Center">
							<PathIcon Data="{StaticResource Icon_Arrow_Right}"
									  Foreground="{ThemeResource OnSurfaceBrush}"
									  utu:AutoLayout.CounterAlignment="Start" />
						</utu:AutoLayout>
					</utu:AutoLayout>
				</utu:AutoLayout>
			</utu:AutoLayout>
			<utu:AutoLayout Padding="24,24,24,24"
							utu:AutoLayout.PrimaryAlignment="Stretch">
				<Button Content="Log out"
						utu:AutoLayout.PrimaryLength="40"
						Style="{StaticResource OutlinedButtonStyle}"
						x:Uid="Profile_Button"
						Command="{Binding Logout}" />
			</utu:AutoLayout>
		</utu:AutoLayout>
	</utu:AutoLayout>
</Page>
